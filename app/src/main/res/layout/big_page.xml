<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/flPageTile"
	android:layout_width="match_parent" 
	android:layout_height="wrap_content"
	>
	
	<com.gradgoose.pennotepad.PageView
		android:id="@+id/pvBigPage"
		android:layout_width="match_parent"
		android:layout_height="wrap_content" 
		android:scaleType="centerCrop"
		android:adjustViewBounds="true"
		/>
	
	<TextView 
		android:id="@+id/tvPageTitle"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content" 
		android:paddingLeft="8dp"
		android:paddingRight="8dp"
		android:paddingTop="2dp"
		android:paddingBottom="2dp"
		android:background="#8ddd"
		android:textColor="#8000"
		android:text="TITLE"
		/>
	
	<TextView
		android:id="@+id/tvTopRightCornerText"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:paddingLeft="8dp"
		android:paddingRight="8dp"
		android:paddingTop="2dp"
		android:paddingBottom="2dp"
		android:background="#8ddd"
		android:textColor="#8000"
		android:layout_gravity="top|end"
		android:text="TITLE"
		/>
	
	<ImageView
		android:id="@+id/ivCutIcon"
		android:layout_width="40dp"
		android:layout_height="40dp"
		android:src="@drawable/ic_content_cut_black_24dp"
		android:layout_gravity="center"
		android:paddingTop="4dp"
		/> 
	
	<CheckBox
		android:id="@+id/cbSelect"
		android:layout_width="match_parent"
		android:layout_height="wrap_content" 
		android:paddingTop="10dp"
		android:paddingBottom="10dp"
		android:text="@string/label_select"
		android:layout_gravity="bottom|center_horizontal"
		android:gravity="center"
		android:background="#ddf"
		/>
	
</FrameLayout>